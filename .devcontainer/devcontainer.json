{
  "name": "openpilot devcontainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "privileged": true,
  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}",
    "force_color_prompt": "1"
  },
  "runArgs": [
    "--shm-size=1G"
  ],
  "features": {
    "desktop-lite": {
        "password": "vscode",
        "webPort": "6080",
        "vncPort": "5901"
    }
  }
}